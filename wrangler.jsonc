{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "hang-time",
  "main": "src/worker.ts",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],

  // Serve static assets from the Vite build output
  "assets": {
    "directory": "./dist"
  },

  // Enable observability for logs in the Cloudflare dashboard
  "observability": {
    "enabled": true
  },

  // Custom domain
  "routes": [{ "pattern": "hang-time.app", "custom_domain": true }]
}
